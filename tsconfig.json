{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2019",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ],
      "@features/*": ["features/*"],
      "@lib/*": ["lib/*"],
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [ "ES2020.Promise" ]
  },
  "include": [
    "src/**/*.ts", "src/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
